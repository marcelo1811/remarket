<div class="col-sm-3">
	<div class="row justify-content-center">
		<div class="card m-1" style="width: 18rem;">
			<% if product_catalogue.product.photo.attached? %>
				<%= cl_image_tag product_catalogue.product.photo.key, class: 'card-img-top', alt: 'Falha na imagem', style: 'height: 18rem;' %>
			<% end %>

			 <div class="card-body">
			    <h4 class="card-title text-primary">
			    	<%= product_catalogue.product.name %>
			    </h4>
				<p class='text-primary'>
					A partir de <strong><%= number_to_currency(product_catalogue.cheapest_resell_price, unit: "R$", separator: ",", delimiter: "") %></strong>
				</p>
			    <div class="card-text">
			    	<p class='text-truncate'>
			    		<%= product_catalogue.product.description %>
			    	</p>
			    </div>
			    <div class="d-flex justify-content-around mt-3">
					<%= link_to 'Detalhes', catalogue_product_catalogue_path(@catalogue, product_catalogue), class: 'btn btn-primary'%>
			    </div>
			 </div>
		</div>
	</div>
</div>
