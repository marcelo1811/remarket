<%= f.input :name,
            required: true,
            autofocus: true,
            placeholder: 'Nome da sua loja. Ex: Roupas Curitiba' %>
<%= f.input :whatsapp_number,
            required: true,
            autofocus: true,
            placeholder: '(41) 99999-9999',
            :data=> {:mask=> '999.999.999.9999'},
            hint: 'Os revendedores entrarão em contato por esse número' %>
<%= f.input :description,
            required: true,
            autofocus: true,
            as: :text,
            placeholder: 'Descreva a sua loja. Ex: Vendemos roupas femininas' %>
<%= f.input :terms,
            required: true,
            as: :text,
            placeholder: 'Escreva aqui os termos e condições para revenda do produto. Ex: Só faço entregas a partir de R$200,00' %>

