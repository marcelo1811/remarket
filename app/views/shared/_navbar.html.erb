          <a href="#como-funciona" class="nav-link">
            Como Funciona?
          </a>
        </li>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "btn btn-outline-primary r-5", style: 'width: 100px; border-radius: 50px;' %>
