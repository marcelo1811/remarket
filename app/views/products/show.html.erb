<div class="container my-3">
    <h3 class='text-primary'><%= @product.name %></h3>

    <div class="row">
      <div class="col-sm-6">
        <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :pad %>
      </div>
      <div class="col-sm-6">
        <h5 class='text-primary'><strong>Fornecedor</strong></h5>
        <p><%= @product.store.name %></p>

        <h5 class='text-primary'><strong>Descrição</strong></h5>
        <p><%= @product.description %></p>

        <h5 class='text-primary'><strong>Variações</strong></h5>
        <% @product.product_variants.each do |variant| %>
        	<div>
            <p>
              <strong><%= variant.name %></strong>
            </p>
            <p>
              Preço de custo: <%= number_to_currency(variant.price, unit: "R$", separator: ",", delimiter: "") %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-actions d-flex justify-content-between my-4">
  		<%= link_to 'Voltar', @store, class: 'btn btn-outline-primary' %>
  		<% if @store.is_subscribed(current_user) %>
			<p class='text-warning'>Você já é revendedor</p>
		<% else %>
	  		<%= link_to 'Tornar-se revendedor', store_terms_path(@store), class: 'btn btn-primary' %>
		<% end %>
    </div>
</div>
